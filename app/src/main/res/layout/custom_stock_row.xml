<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/custom__logo_wrapper"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/custom__logo"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_stock_default"
            />
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/custom__ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toEndOf="@id/custom__logo_wrapper"
            app:layout_constraintBottom_toTopOf="@id/custom__name"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="YNDX"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/custom__like_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="6dp"
        android:backgroundTint="@color/star_shadow"
        android:foregroundGravity="center_vertical"
        android:background="@drawable/ic_star"
        android:layout_gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/custom__ticket"
        app:layout_constraintTop_toTopOf="@id/custom__ticket"
        app:layout_constraintBottom_toBottomOf="@id/custom__ticket"/>

    <TextView
        android:layout_marginStart="12dp"
        android:id="@+id/custom__name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/custom__ticket"
        app:layout_constraintStart_toEndOf="@id/custom__logo_wrapper"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        tools:text="Yandex, LLC"
        android:layout_marginBottom="14dp"/>

    <TextView
        android:id="@+id/custom__current_price"
        android:layout_marginEnd="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4 764,6 ₽"
        android:textSize="20sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/custom__price_changes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_marginEnd="12dp"
        android:id="@+id/custom__price_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="+55 ₽ (1,15%)"
        android:textSize="12sp"
        android:textColor="@color/price_raises"
        app:layout_constraintTop_toBottomOf="@id/custom__current_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>